<div class="page-header">
  <h1>
    Saved Bands from Friends
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Band</th>
        <th>Friend</th>
        <th>Unsave</th>
      </tr>

      <% @bands.each do |savedband| %>
      <tr>
        <td><%= link_to savedband.name, "/bands/#{savedband.id}" %></td>
        <td><%= link_to savedband.user.username, "/users/#{savedband.user.id}" %></td>
        <td>
          <a href="/delete_savedband/<%= Savedband.find_by(:band_id => savedband.id, :user_id => current_user.id).id %>" class="btn btn-warning" rel="nofollow">Unsave</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
