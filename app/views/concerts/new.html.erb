<div class="row">
  <div class="col-md-8 col-md-offset-2">


    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          Add Concert
        </h3>
      </div>

      <div class="panel-body">
        <form action="/create_concert" method="post" enctype="multipart/form-data">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for concertdate -->
          <div class="form-group">
            <label for="concertdate" class="control-label">
              Name
            </label>

            <input id="concertdate" name="concertdate" placeholder="Add the Concert date..." class="form-control" value="<%= @concert.concertdate %>">
          </div>

        <div class="form-group">
        <label for="band_id" class="control-label">
          Band
        </label>

        <%= select_tag(:band_id, options_from_collection_for_select(Band.where(:user_id => current_user.id), :id, :name, @concert.band_id), :class => "form-control") %>

        <p class="help-block">
          <a href="/bands/new">or add a new band</a>
        </p>
      </div>

          <!-- Label and input for venue -->
      <div class="form-group">
        <label for="venue_id" class="control-label">
          Venue
        </label>

        <%= select_tag(:venue_id, options_from_collection_for_select(Venue.where(:user_id => current_user.id).order("name ASC"), :id, :name, @concert.venue_id), :class => "form-control") %>

        <p class="help-block">
          <a href="/venues/new">or add a new venue</a>
        </p>
      </div>

          <input type="hidden" id="user_id" name="user_id" value="<%= current_user.id %>">

          <div class="form-group">
            <button class="btn btn-success btn-block">
              Create Concert
            </button>
          </div>

          <div class="form-group">
            <a href="/concerts" class="btn btn-link btn-block">
              Cancel
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
