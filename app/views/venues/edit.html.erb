<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <!-- Validation failure messages -->
    <% if @venue.errors.any? %>
      <% @venue.errors.full_messages.each do |message| %>
        <div class="alert alert-dismissable alert-danger">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <%= message %>
        </div>
      <% end %>
    <% end %>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          Edit Venue
        </h3>
      </div>

      <div class="panel-body">
        <form action="/update_venue/<%= @venue.id %>" method="post">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name" class="control-label">
              Name
            </label>

            <input id="name" name="name" placeholder="Add the Venue name..." class="form-control" value="<%= @venue.name %>">
          </div>

          <!-- Label and input for city -->
          <div class="form-group">
            <label for="city" class="control-label">
              Name
            </label>

            <input id="city" name="city" placeholder="City it's in..." class="form-control" value="<%= @venue.city %>">
          </div>

          <!-- Label and input for year -->
          <div class="form-group">
            <label for="year" class="control-label">
              Year
            </label>

            <input id="year" name="year" placeholder="Year founded..." class="form-control" value="<%= @venue.year %>">
          </div>

          <input type="hidden" id="user_id" name="user_id" value="<%= current_user.id %>">

          <div class="form-group">
            <button class="btn btn-success btn-block">
              Update Venue
            </button>
          </div>

          <div class="form-group">
            <a href="/venues" class="btn btn-link btn-block">
              Cancel
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
