<div class="page-header">
  <h2>
    My Venues
    <a href="/venues/new" class="btn btn-lg btn-success">Add Venue</a>
  </h2>
</div>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Venue</th>
        <th>City</th>
        <th>Founded</th>
        <th>Actions</th>
        </tr>

      <% @venues.each do |ven| %>
      <tr>
        <td><%= link_to ven.name, "/venues/#{ven.id}" %></td>
        <td><%= ven.city %></td>
        <td><%= ven.year %></td>
        <td>
        <% if ven.user_id==current_user.id %>
          <a href="/venues/<%= ven.id %>" class="btn btn-primary">Show</a>
          <a href="/venues/<%= ven.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_venue/<%= ven.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
        <%end%>
      </tr>
      <% end %>
    </table>
  </div>
</div>

